package graphics;

import java.util.Random;

import core.Loop;

public abstract class EpicDisplay extends PixelContainer {
	
	private PixelContainer image;
	
	public EpicDisplay(PixelContainer img) {
		super(img.width, img.height);
		
		Random rand = new Random();
		image = img;
		
		for (int i = 0; i < image.width * image.height; i++) {
			image.pixels[i] = rand.nextInt();
		}
	}
	
	public abstract void render(Loop time);
}
