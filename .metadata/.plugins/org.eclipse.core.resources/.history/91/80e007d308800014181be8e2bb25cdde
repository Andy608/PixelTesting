package graphics;

import java.util.Random;

import core.Loop;

public class PixelDisplay extends PixelContainer {

	private PixelManager test;
	
	public PixelDisplay(PixelManager pixels) {
		super(pixels.width, pixels.height);
		
		Random rand = new Random();
		test = pixels;
		
		for (int i = 0; i < test.width * test.height; i++) {
			test.pixels[i] = rand.nextInt();
		}
	}
	
	public void render(Loop time) {
		formatPixels(test, 0, 0);
	}
	
}
