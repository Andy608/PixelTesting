package graphics;

import java.util.Random;

import core.Loop;

public class PixelDisplay extends PixelContainer {
	
	private PixelContainer image;
	
	public PixelDisplay(PixelContainer pixels) {
		super(pixels.width, pixels.height);
		
		Random rand = new Random();
		this.image = pixels;
		
		for (int i = 0; i < image.width * image.height; i++) {
			this.image.pixels[i] = rand.nextInt();
		}
	}
	
	public void render(Loop time) {
		formatPixels(image, 0, 0);
	}
	
}
