package graphics;

import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;

public class Screen {

	private BufferedImage image;
	private final String imagePath = "\\textures\\Individual Tiles\\Grass Tiles\\grass_to_dirt_east_1.png";
	
	public Screen() {
		try {
			image = ImageIO.read(new File(imagePath));
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
}
