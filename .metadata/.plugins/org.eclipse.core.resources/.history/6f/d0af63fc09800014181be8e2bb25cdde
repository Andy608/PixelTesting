package graphics;

import java.util.Random;

import core.Loop;

public class EpicDisplay extends PixelContainer {
	
	private PixelContainer image;
	
	public EpicDisplay(int w, int h) {
		super(w, h);
		
		image = new PixelContainer(20, 20);
		
		Random rand = new Random();
		
		for (int i = 0; i < image.width * image.height; i++) {
			image.pixels[i] = rand.nextInt();
		}
	}
	
	public void render(Loop time) {
		formatPixels(img, 0, 0);
	}
}
