package graphics;

import java.awt.Canvas;
import java.awt.Dimension;

public class PixelCanvas extends Canvas {

	private static final long serialVersionUID = 3186557580516093308L;
	private static final int SCALE = 5;
	
	private static final Dimension defaultSize = new Dimension(DisplayManager.getWidth() * DisplayManager.getScale(), DisplayManager.getHeight() * DisplayManager.getScale());
	
	public PixelCanvas() {
		this.setPreferredSize(defaultSize);
	}
	
	
	
}
